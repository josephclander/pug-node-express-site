extends layout.pug

block content

  article.portfolio-intro
    h1 My Work
    p A selection of various works completed
  article.portfolio-project-thumbs
    .projects-box.box.grid
      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`/static/imgs/${project.thumbnail_url}`, alt=`${project.project_name} Thumbnail Image`)
            h5 #{project.project_name}

